<% include header %>

    <div class="container">
      <div class="row">
        <div class="col text-center">
          <h1>Tantárgyak szerkesztése</h1>
        </div>
      </div>
      <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">Tantárgyak</th>
                    <th scope="col" style="width: 1px"></th>
                  </tr>
                </thead>
                <tbody>
                  <% subjects.forEach(function(subject){ %>
                    <tr>
                      <td><%= subject.name %></td>
                      <td>
                          <a class="btn btn-primary" href="/subject/<%= subject.id %>/edit">Szekersztés</a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
            </table>
        </div>
      </div>   
      <div class="row text-center">
        <div class="col-6">
            <a class="btn btn-primary" href="/subjects/new">Új tárgy</a>
        </div> 
        <div class="col-6">
            <a class="btn btn-secondary" href="/teacher/<%= user.id %>">Vissza</a>
        </div> 
      </div>         
    </div>
    
<% include footer %>