<% include header %>

    <div class="container">
      <div class="row">
        <div class="col text-center">
          <h1>Regisztráció</h1>
        </div>
      </div>
      <% include error %>
      <div class="row">
        <div class="col">
            <form method="post">
              <div class="form-group">
                  <div class="text-center">
                      <div class="btn-group btn-group-toggle" data-toggle="buttons">
                          <label class="btn btn-primary active">
                              <input type="radio" class="form-control" name="type" id="optionStudent" value="student" checked> Diák
                          </label>
                          <label class="btn btn-primary">
                              <input type="radio" class="form-control" name="type" id="optionTeacher" value="teacher"> Tanár
                          </label>
                      </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputNeptun">Neptun kód</label>
                  <input type="text" class="form-control" name="neptun" id="inputNeptun" placeholder="Neptun kód">
                </div>
                <div class="form-group">
                    <label for="inputName">Teljes név</label>
                    <input type="text" class="form-control" name="name" id="inputName" placeholder="Teljes név">
                </div>
                <div class="form-group">
                  <label for="inputPassword">Jelszó</label>
                  <input type="password" class="form-control" name="password" id="inputPassword" placeholder="Jelszó">
                </div>
                <div class="row text-center">
                  <div class="col">
                    <button type="submit" class="btn btn-primary" href="/register">Regisztráció</a>
                  </div> 
                  <div class="col">
                      <a class="btn btn-secondary" href="/">Vissza</a>
                    </div>                    
                </div>
              </form>
        </div>
      </div>        
    </div>
    

<% include footer %>